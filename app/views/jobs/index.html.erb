<!DOCTYPE html>
<html>
  <h1>Welcome <%= @user %> !</h1>
  <body>
    <% if user_signed_in? %>
    <li>
      <%= link_to('My Account', edit_user_registration_path) %>
    </li>
    <li>
      <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
    </li>
    <% else %>
    <li>
      <%= link_to('Login', new_user_session_path) %>
    </li>
    <% end %>
  </body>
</html>
