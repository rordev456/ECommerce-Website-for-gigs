<div class="jobwrapper">
  <div class="jobcard">
    <span class="enclosed"> <h1 style="font-size:2vw;"><b><%= @job.name %> !</h1>
    <p style="font-size:1.5vw;">
      <b>Category:</b>
        <%= Category.find(Subcategory.find(@job.subcategory_id).category_id).name %>
        <b>-></b> 
        <%= Subcategory.find(@job.subcategory_id).name %> 
    </p>
    </b></span> <br/>
    <p style="font-size:2vw;"> <strong> Posted By: </strong> <%= link_to User.find(@job.user_id).fname, user_path(id: @job.user_id) %> </p>

    <p style="font-size:2vw;">
      <strong>Cost:</strong>
      <%= @job.cost %>
    </p>
    <% if user_signed_in?%>
      <% if @job.user_id != current_user.id %>
        <div class="row">
          <div class="col-md-12 mt-4 text-center">
            <%= form_tag id: "billing-sign-in" do  %>
              <%= link_to "Order Now", new_order_path(@job), class: "btn btn-primary" %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="row">
        <div class="col-md-12 mt-4 text-center">
          <%= form_tag id: "billing-sign-in" do  %>
            <%= link_to "Sign In to Order", new_user_session_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
    <p>
      <h4><%= link_to 'Back to browsing', jobs_path %></h4>
    </p>
    <p style="font-size:2vw;">
      <h4 style="font-size:2vw;"><b>Description:</b> <%= @job.description %> </h4>
    </p>
    
  </div>
</div>
